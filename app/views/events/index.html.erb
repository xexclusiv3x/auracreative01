<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Starts</th>
      <th>Ends</th>
      <th>Slug</th>
      <th>User</th>
      <th>Business profile</th>
      <th>Image</th>
      <th>Contact number</th>
      <th>Event link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.starts %></td>
        <td><%= event.ends %></td>
        <td><%= event.slug %></td>
        <td><%= event.user %></td>
        <td><%= event.business_profile %></td>
        <td><%= event.image %></td>
        <td><%= event.contact_number %></td>
        <td><%= event.event_link %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

