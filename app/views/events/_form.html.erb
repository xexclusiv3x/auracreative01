<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :business_profile, label:   'Is this event for a listed business?' %>
    <%= f.input :description, placeholder: 'Write info about the event' %>
    <%= f.input :location, input_html: { value: 'Aura Creative'} %>
    <%= f.input :starts %>
    <%= f.input :ends %>
    <%= f.input :image %>
    <%= f.input :contact_number %>
    <%= f.input :event_link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
